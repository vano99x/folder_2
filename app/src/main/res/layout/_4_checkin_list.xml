<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@id/PageCheckinList"
	android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">



<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
	<LinearLayout style="@style/FilterBtn_Wrap2">
		<LinearLayout style="@style/FilterBtn_Wrap1">
			<Button android:id="@id/checkin_btn_filter_left" android:text="Начальная дата" style="@style/FilterBtn" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout style="@style/FilterBtn_Wrap2">
		<LinearLayout style="@style/FilterBtn_Wrap1">
			<Button android:id="@id/checkin_btn_filter_right" android:text="Конечная дата" style="@style/FilterBtn" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>


<!--//
//-->
<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="horizontal" android:background="@color/backW8" >
	<TextView android:textColor="#fff" android:background="#46b525" 
		android:paddingRight="9.0dip" android:paddingLeft="9.0dip"
		android:id="@id/PageCheckinList_SendTextView_Id" android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<TextView android:textColor="#4b83c4" android:textSize="12.0dip" android:text="Отправлено" android:layout_width="wrap_content" android:layout_height="wrap_content" />
	
	<TextView android:textColor="#fff" android:background="#f5d50b" 
		android:paddingRight="9.0dip" android:paddingLeft="9.0dip"
		android:id="@id/PageCheckinList_NotSendTextView_Id" android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<TextView android:textColor="#4b83c4" android:textSize="12.0dip" android:text="Не отправлялось" android:layout_width="wrap_content" android:layout_height="wrap_content" />
	
	<TextView android:textColor="#fff" android:background="#ff0000" 
		android:paddingRight="9.0dip" android:paddingLeft="9.0dip"
		android:id="@id/PageCheckinList_SendErrorTextView_Id" android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<TextView android:textColor="#4b83c4" android:textSize="12.0dip" android:text="Ошибка" android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>

	<!--//<LinearLayout 
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
	>//-->
	<ListView 
		android:id="@id/PageCheckinList_ListView_Id" 
		style="@style/myScroll"
		android:scrollbarSize="50dp"
		
		android:divider="@color/reddivider"
		android:dividerHeight="@dimen/twodp"
			
		android:fadeScrollbars="false" 
		android:scrollbars="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<!--//</LinearLayout>//-->
	
</LinearLayout>
