<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout 
	android:orientation="vertical" android:id="@id/PagePersonelList" 
	android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
>

    <TextView 
		android:text="@string/msg_enter_lastname" 
		android:textSize="8.0pt" android:textStyle="bold" android:textColor="#ffffff" 
		android:layout_width="fill_parent" android:layout_height="60.0px" 
		android:layout_x="60.0dip" android:layout_y="0.0dip" />
	
	<RelativeLayout 
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_y="30.0dip" android:layout_centerInParent="true"
	>
        <EditText 
			android:id="@id/txt_lastname" android:paddingLeft="50.0dip" android:layout_width="230.0dip" 
			android:layout_height="wrap_content" 
		/>
		<!--// //-->
        <Button 
			android:id="@id/SearchButton_Id" 
			android:text="Найти" 
			
			android:background="@drawable/button_mode" 
			android:layout_toRightOf="@id/txt_lastname" 
			android:textSize="6.0pt" android:typeface="sans" android:textStyle="bold" android:textColor="#ff737678" 
			android:layout_width="wrap_content" android:layout_height="wrap_content">
		</Button>
	</RelativeLayout>
	
    <TextView 
		android:id="@id/lable_empty_list" 
		android:text="@string/message_empty_personel_list" 
		android:textSize="12.0pt" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" 
		android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:singleLine="false" android:layout_x="0.0px" android:layout_y="250.0px" 
	/>
	
	<LinearLayout 
		android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" 
		android:layout_y="100.0px" android:layout_weight="1.0"
	>
		<ListView
			android:id="@id/PagePersonelList_ListView_Id"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />
	</LinearLayout>
	
</AbsoluteLayout>